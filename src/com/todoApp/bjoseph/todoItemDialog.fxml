<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.todoApp.bjoseph.DialogController">
    <headerText>
        Enter the necessary information for the new todo item below
    </headerText>
    <content>
        <GridPane vgap="10" hgap="10">
            <!--Short Description Piece Here-->
            <Label text="Short Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="shortDescriptionField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <!--Item Details Piece Here-->
            <Label text="Details:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextArea fx:id="itemDetailsText" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>
            <!--Date Deadline Piece Here-->
            <Label text="Deadline:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <DatePicker fx:id="itemDeadlineDate" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>
    </content>

</DialogPane>
